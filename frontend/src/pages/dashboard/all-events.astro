        return data;
      } catch (error) {
        console.error('‚ùå Error en EventsService.getAllEvents():', error);
        return {
          success: false,
          message: error instanceof Error ? error.message : 'Error de conexi√≥n con el servidor'
        };
      }
    },

    async getCategories() {
      try {
        const response = await fetch(`${API_BASE_URL}/eventos/categorias`, {
          method: 'GET',
