<script>
  console.log('üöÄ PERFIL SCRIPT INICIADO');
  
  const API_BASE_URL = 'http://localhost:3001/api';
  let userData: any = null;
  let categorias: any[] = [];
  let selectedCategorias: number[] = [];

  // Servicio para autenticaci√≥n y headers
  const AuthService = {
    getAuthHeaders() {
      const token = localStorage.getItem('authToken');
      return {
        'Content-Type': 'application/json',
        'Authorization': 'Bearer ' + token
      };
    }
  };

  // Servicio para usuario
  const UserService = {
    async getProfile() {
      try {
        const response = await fetch(API_BASE_URL + '/auth/profile', {
          method: 'GET',
          headers: AuthService.getAuthHeaders()
        });
        return await response.json();
      } catch (error) {
        console.error('Error obteniendo perfil:', error);
        return { success: false, message: 'Error de conexi√≥n' };
      }
    },

    async updateProfile(profileData: any) {
      try {
        const response = await fetch(API_BASE_URL + '/auth/profile', {
          method: 'PUT',
          headers: AuthService.getAuthHeaders(),
          body: JSON.stringify(profileData)
        });
        return await response.json();
      } catch (error) {
        console.error('Error actualizando perfil:', error);
        return { success: false, message: 'Error de conexi√≥n' };
      }
    },

    async changePassword(passwordData: any) {
      try {
        const response = await fetch(API_BASE_URL + '/password/change', {
          method: 'POST',
          headers: AuthService.getAuthHeaders(),
          body: JSON.stringify(passwordData)
        });
        return await response.json();
      } catch (error) {
        console.error('Error cambiando contrase√±a:', error);
        return { success: false, message: 'Error de conexi√≥n' };
      }
    },

    async verifyCurrentPassword(currentPassword: string) {
      try {
        const response = await fetch(API_BASE_URL + '/password/verify', {
          method: 'POST',
          headers: AuthService.getAuthHeaders(),
          body: JSON.stringify({ currentPassword })
        });
        return await response.json();
      } catch (error) {
        console.error('Error verificando contrase√±a:', error);
        return { success: false, message: 'Error de conexi√≥n' };
      }
    }
  };

  // Servicio para categor√≠as
  const CategoriasService = {
    async getCategorias() {
      try {
        const response = await fetch(API_BASE_URL + '/eventos/categorias', {
          method: 'GET',
          headers: {
            'Content-Type': 'application/json'
          }
        });
        return await response.json();
      } catch (error) {
        console.error('Error obteniendo categor√≠as:', error);
        return { success: false, message: 'Error de conexi√≥n' };
      }
    }
  };

  // Funci√≥n para cargar categor√≠as
  async function loadCategorias() {
    console.log('üìÇ Cargando categor√≠as...');
    
    try {
      const response = await CategoriasService.getCategorias();
      console.log('üìÇ Respuesta de categor√≠as:', response);
      
      if (response.success && response.categorias) {
        categorias = response.categorias;
        renderCategoriasDropdown();
      } else {
        console.error('‚ùå Error cargando categor√≠as:', response.message);
        showCategoriesError();
      }
    } catch (error) {
      console.error('‚ùå Error cargando categor√≠as:', error);
      showCategoriesError();
    }
  }

  // Funci√≥n para renderizar el dropdown de categor√≠as
  function renderCategoriasDropdown() {
    const dropdownContent = document.getElementById('dropdown-content');
